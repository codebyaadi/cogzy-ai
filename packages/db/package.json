{
  "name": "@cogzy/db",
  "module": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsup",
    "db:generate": "bunx drizzle-kit generate",
    "db:migrate": "bunx drizzle-kit migrate",
    "db:push": "bunx drizzle-kit push",
    "lint": "eslint . --max-warnings 0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "drizzle-kit": "^0.31.4",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.1",
    "drizzle-orm": "^0.44.4"
  },
  "exports": {
    "./drizzle": {
      "types": "./src/drizzle.ts",
      "default": "./dist/drizzle.js"
    },
    "./schema/*": {
      "types": "./src/schema/*.ts",
      "default": "./dist/schema/*.js"
    }
  }
}
